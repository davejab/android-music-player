<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_library"
    app:startDestination="@id/artistFragment">

    <fragment
        android:id="@+id/artistFragment"
        android:name="davejab.musicplayer.activities.fragments.ArtistFragment"
        android:label="fragment_artist"
        tools:layout="@layout/fragment_artist" >
        <action
            android:id="@+id/action_artistFragment_to_albumFragment"
            app:destination="@id/albumFragment" />
    </fragment>

    <fragment
        android:id="@+id/albumFragment"
        android:name="davejab.musicplayer.activities.fragments.AlbumFragment"
        android:label="fragment_album"
        tools:layout="@layout/fragment_album">
        <action
            android:id="@+id/action_albumFragment_to_songFragment"
            app:destination="@id/songFragment" />
    </fragment>

    <fragment
        android:id="@+id/songFragment"
        android:name="davejab.musicplayer.activities.fragments.SongFragment"
        android:label="fragment_song"
        tools:layout="@layout/fragment_song" />

</navigation>